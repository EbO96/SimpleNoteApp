<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/archives_card"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:maxHeight="130dp"
    android:maxWidth="220dp"
    android:minHeight="130dp"
    android:minWidth="220dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTextViewArch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:hint="@string/note_title"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/noteTextViewArch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:hint="@string/note" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/deleteArchivedNoteImageButtonArch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@null"
                android:padding="10dp"
                android:src="@drawable/ic_delete_black_24dp" />

            <ImageButton
                android:id="@+id/restoreArchivedNoteImageButtonArch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@null"
                android:src="@drawable/ic_restore_black_24dp"
                android:padding="10dp" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>