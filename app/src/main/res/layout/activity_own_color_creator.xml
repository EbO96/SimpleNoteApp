<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/material_white"
        tools:context="app.note.simple.brulinski.sebastian.com.simplenoteapp.Activity.OwnColorCreatorActivity"
        tools:layout_editor_absoluteY="25dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/own_color_creator_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:background="@color/material_white" />

        <android.support.v7.widget.CardView
            android:id="@+id/color_preview"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/own_color_creator_toolbar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="60dp"
            app:cardBackgroundColor="@color/material_black"/>

        <TextView
            android:id="@+id/hex_value_preview"
            android:layout_width="120dp"
            android:layout_height="37dp"
            android:layout_below="@id/color_preview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:hint="#000000"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <SeekBar
            android:id="@+id/seekBar_red_value"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="300dp"
            android:layout_height="22dp"
            android:layout_below="@id/hex_value_preview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:max="255"
            android:progress="1"
            android:theme="@style/SeekBarRed" />

        <SeekBar
            android:id="@+id/seekBar_green_value"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="300dp"
            android:layout_height="22dp"
            android:layout_below="@id/seekBar_red_value"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:max="255"
            android:progress="1"
            android:theme="@style/SeekBarGreen" />

        <SeekBar
            android:id="@+id/seekBar_blue_value"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="300dp"
            android:layout_height="22dp"
            android:layout_below="@id/seekBar_green_value"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:max="255"
            android:progress="1"
            android:theme="@style/SeekBarBlue" />

        <EditText
            android:id="@+id/red_value_edit"
            android:layout_width="60dp"
            android:layout_height="37dp"
            android:layout_below="@id/seekBar_blue_value"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@id/green_value_edit"
            android:hint="R"
            android:inputType="number"
            android:maxLength="3"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        <EditText
            android:id="@+id/green_value_edit"
            android:layout_width="60dp"
            android:layout_height="37dp"
            android:layout_below="@id/seekBar_blue_value"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:hint="G"
            android:inputType="number"
            android:maxLength="3"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        <EditText
            android:id="@+id/blue_value_edit"
            android:layout_width="60dp"
            android:layout_height="37dp"
            android:layout_below="@id/seekBar_blue_value"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/green_value_edit"
            android:hint="B"
            android:inputType="number"
            android:maxLength="3"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        <android.support.v7.widget.CardView
            android:id="@+id/colors_recycler_container"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            app:cardCornerRadius="0dp"
            app:cardElevation="3dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/colors_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp" />

        </android.support.v7.widget.CardView>


    </RelativeLayout>
</layout>
